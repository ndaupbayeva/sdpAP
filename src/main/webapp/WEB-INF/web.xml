         version="3.1">

  <servlet>
    <servlet-name>TodoController</servlet-name>
    <servlet-class>Task2.TodoController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TodoController</servlet-name>
    <url-pattern>/todo</url-pattern>
  </servlet-mapping>
</web-app>
